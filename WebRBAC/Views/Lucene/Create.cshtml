@model WebRBAC.Models.News
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<!-- 加载编辑器的容器 -->
<script id="container" name="content" type="text/plain">
    这里写你的初始化内容
</script>
<!-- 配置文件 -->
<script type="text/javascript" src="~/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="~/ueditor/ueditor.all.js"></script>
<script src="~/My97DatePicker/WdatePicker.js"></script>
<!-- 实例化编辑器 -->

@using (Html.BeginForm())
{
<table class="table">
    <tr>
        <td style="width:6%;">标题：</td>
        <td>@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>日期：</td>
        <td>@Html.TextBoxFor(m => m.AddTime, new { @class = "form-control", onfocus = "WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" })</td>
    </tr>
    <tr>
        <td>内容：</td>
        <td>@Html.TextAreaFor(m => m.Content,new {style="width:100%; height:300px;" })</td>
    </tr>
    <tr>
        <td colspan="2" style="padding-top:1em;">
            <button type="submit" class="btn btn-info">提交</button>
            <button type="reset" class="btn btn-danger">重置</button>
        </td>
    </tr>
</table>
}

<script type="text/javascript">
    var ue = UE.getEditor('Content');
</script>